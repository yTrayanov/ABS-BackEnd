services:
  abs-auth:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Auth/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: auth
    ports:
    - published: 5001
      target: 5001
    - target: 5001
  abs-flights:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Flights/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: flights
    ports:
    - published: 5002
      target: 5002
    - target: 5002
  abs-gateway:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Gateway/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: gateway
    ports:
    - published: 5000
      target: 5000
    - target: 5000
  abs-sectionairlineairport:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: Abs-SectionAirlineAirport/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: create
    ports:
    - published: 5004
      target: 5004
    - target: 5004
  abs-tickets:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Tickets/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: tickets
    ports:
    - published: 5003
      target: 5003
    - target: 5003
  dynamoTablesInit:
    command: 'aws dynamodb create-table --table-name ABS-Table / --attribute-definitions
      / AttributeName=PK,AttributeType=S / AttributeName=SK,AttributeType=S / --key-schema
      / AttributeName=PK,KeyType=HASH / AttributeName=SK,KeyType=RANGE / --global-secondary-indexes
      / [ / "Create": { / "IndexName": "GSI1", / "KeySchema": [{"AttributeName":"PK","KeyType":"HASH"}],
      / "Projection":{ / "ProjectionType":"ALL" / }, / "Create": { / "IndexName":
      "GSI2", / "KeySchema": [{"AttributeName":"PK","KeyType":"HASH"}], / "Projection":{
      / "ProjectionType":"ALL" / } / ] / --provisioned-throughput ReadCapacityUnits=5,WriteCapacityUnits=5
      / --endpoint-url http://host.docker.internal:8000'
    image: garland/aws-cli-docker
    links:
    - dynamodb-local
  dynamodb-local:
    command: -jar DynamoDBLocal.jar -sharedDb -dbPath ./data
    container_name: dynamodb-local
    image: amazon/dynamodb-local:latest
    ports:
    - published: 8000
      target: 8000
    - target: 8000
    volumes:
    - C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd\docker\dynamodb:/home/dynamodblocal/data:rw
    working_dir: /home/dynamodblocal
version: '3.4'