services:
  abs-auth:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Auth/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: absauth
    ports:
    - target: 80
  abs-flights:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Flights/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: absflights
    ports:
    - target: 80
  abs-gateway:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: ABS-Gateway/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: absgateway
    ports:
    - target: 80
  abs-sectionairlineairport:
    build:
      context: C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd
      dockerfile: Abs-SectionAirlineAirport/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: abssectionairlineairport
    ports:
    - target: 80
  dynamodb:
    command: -jar DynamoDBLocal.jar -sharedDb -dbPath /home/dynamodblocal/data/
    container_name: my-dynamodb
    hostname: dynamodb
    image: amazon/dynamodb-local
    ports:
    - published: 8000
      target: 8000
    restart: always
    volumes:
    - C:\Users\Yavor Trayanov\source\repos\ABS-BackEnd\my-dynamodb-data:/home/dynamodblocal/data:rw
version: '3.4'